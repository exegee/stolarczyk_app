rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
   allow read, write: if true;
  	// Allow users to only be able to write to their own documents.
  	match /users/{uid} {
    	allow write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Allow all users to be able to read all users documents.
    match /users/{uid} {
    	allow read: if request.auth != null;
    }
    
    // Allow reading and creating of chats by any authenticated user.
    match /chat/{document=**} {
    	allow read, create: if request.auth != null;
    }
    match /subscriptions/{document=**}{
    allow read,write,create: if true;
    }
    
    // Allow reading and creating of chats by any authenticated user.
    match /topics/{document=**} {
    	allow read, write, create: if request.auth != null;
      //allow read, write: if true;
     
    
      }
    //tch /topics/comments/{createdBy}{
    //low delete: if request.auth.uid == createdBy.uid;
    //
       match /{path=**}/comments/{comment} {
      allow read: if request.auth != null;
    }
    
    //  // Allow reading and creating of chats by any authenticated user.
    // match /topics/{topic}/tasks/{document=**} {
    // 	allow read, create: if request.auth != null;      
      
